#)

# GameData files
#CopyFiles('', 'addons/sourcemod/gamedata',
#  [ 'default.txt' ]
#)

# Config Files
#CopyFiles('configs', 'addons/sourcemod/configs',
#  [ 'configfile.cfg',
#  'otherconfig.cfg,
#  ]
#)

# Copy binaries.
for cxx_task in Extension.extensions:
  builder.AddCopy(cxx_task.binary, folder_map['addons/tickrate_enabler'])

# Autoload file
#CopyFiles('', 'addons/sourcemod/extensions',
#  [ 'default.autoload' ]
#)

# VDF file
if builder.options.sdks == 'l4d':
  CopyFiles('', 'addons',
  [ 'tickrate_enabler_l4d1.vdf' ]
)
if builder.options.sdks == 'l4d2':
  CopyFiles('', 'addons',
  [ 'tickrate_enabler.vdf' ]
)